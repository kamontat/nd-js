{
  "name": "nd",
  "version": "1.0.0-alpha.1",
  "description": "Novel dek-d Downloader",
  "main": "nd.js",
  "author": "Kamontat Chantrachirathumrong <kamontat_c@hotmail.com>",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "bluebird": "3.5.2",
    "chalk": "2.4.1",
    "cheerio": "1.0.0-rc.2",
    "commander": "2.18.0",
    "config": "2.0.1",
    "fs-extra": "7.0.0",
    "glob": "7.1.3",
    "iconv-lite": "0.4.24",
    "ink-docstrap": "1.2.1",
    "js-yaml": "3.12.0",
    "moment": "2.22.2",
    "mustache": "3.0.0",
    "pjson": "1.0.9",
    "prompts": "1.1.1",
    "request": "2.88.0",
    "request-promise": "4.2.2",
    "semver": "5.5.1",
    "sqlite3": "4.0.2",
    "tabtab": "2.2.2",
    "uglify-es": "3.3.9",
    "uuid": "3.3.2",
    "vorpal": "1.12.0",
    "winston": "3.1.0",
    "winston-daily-rotate-file": "3.3.2",
    "write-yaml": "1.0.0"
  },
  "devDependencies": {
    "@types/bluebird": "3.5.24",
    "@types/cheerio": "0.22.9",
    "@types/config": "0.0.34",
    "@types/core-js": "2.5.0",
    "@types/fs-extra": "5.0.4",
    "@types/iconv-lite": "0.0.1",
    "@types/jest": "23.3.2",
    "@types/js-yaml": "3.11.2",
    "@types/mustache": "0.8.31",
    "@types/request": "2.47.1",
    "@types/request-promise": "4.1.42",
    "@types/semver": "5.5.0",
    "@types/sqlite3": "3.1.3",
    "@types/uuid": "3.4.4",
    "@types/vorpal": "1.11.0",
    "babel-jest": "23.6.0",
    "coveralls": "3.0.2",
    "css-loader": "1.0.0",
    "gh-pages": "2.0.0",
    "html-loader": "0.5.5",
    "jest": "23.6.0",
    "jest-extended": "0.10.0",
    "jest-junit": "5.1.0",
    "jest-raw-loader": "1.0.1",
    "pkg": "4.3.1",
    "rimraf": "2.6.2",
    "to-string-loader": "1.1.5",
    "ts-jest": "23.10.2",
    "ts-loader": "5.1.1",
    "typedoc": "0.12.0",
    "typedoc-webpack-plugin": "1.1.4",
    "typescript": "3.0.3",
    "uglify-js": "3.4.9",
    "webpack": "4.19.1",
    "webpack-cli": "3.1.0",
    "webpack-dashboard": "2.0.0",
    "webpack-node-externals": "1.7.2"
  },
  "scripts": {
    "compile": "webpack",
    "compile:dashboard": "webpack-dashboard -- webpack",
    "compile:prod": "webpack --mode=production",
    "compile:watch": "yarn compile:dashboard --watch",
    "start": "node ./.caches/nd.min.js",
    "deploy": "yarn compile:prod && pkg --out-path bin .",
    "deploy:debug": "yarn clean && yarn deploy --debug",
    "version:alpha": "semver --preid alpha --increment prerelease",
    "version:beta": "semver --preid beta --increment prerelease",
    "version:patch": "semver --increment patch",
    "version:minor": "semver --increment minor",
    "version:major": "semver --increment major",
    "docs": "jsdoc -c ./jsdoc.config.json -t ./node_modules/ink-docstrap/template -d docs -r .",
    "gh-pages": "gh-pages -d docs",
    "clean": "rimraf .caches bin",
    "release": "./scripts/deploy.sh",
    "analytic": "webpack --json > ./.caches/report.json",
    "analytic:prod": "webpack --mode=production --json > ./.caches/report.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:verbose": "jest --verbose",
    "coverage": "jest --coverage",
    "coverage:watch": "jest --coverage --watch",
    "coverage:ci": "jest --ci --coverage --verbose"
  },
  "pkg": {
    "assets": "package.json"
  },
  "bin": ".caches/nd.min.js",
  "jest": {
    "setupTestFrameworkScriptFile": "./test/jest.setup.js",
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": ["**/src/**/__tests__/**/*.ts?(x)", "**/src/**/?(*.)+(spec|test).ts?(x)"],
    "collectCoverageFrom": ["**/*.ts", "!**/node_modules/**"],
    "coverageReporters": ["json", "lcov", "text-summary"],
    "moduleFileExtensions": ["js", "ts", "html", "mustache"],
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.mustache$": "<rootDir>/test/htmlLoader.js",
      "^.+\\.css$": "jest-raw-loader"
    },
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "output": "coverage/reporter/junit/result.xml"
        }
      ]
    ]
  }
}
